{
  "name": "quick-notes-traditional",
  "version": "1.0.0",
  "description": "Quick Notes - Traditional Node.js + Express + SQLite Stack",
  "scripts": {
    "dev:backend": "tsx watch backend/server.ts",
    "dev:frontend": "vite",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build:frontend": "vite build",
    "build": "npm run build:frontend && tsc --project backend/tsconfig.json",
    "start": "node backend/dist/server.js",
    "db:setup": "tsx backend/scripts/setup-db.ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "sqlite3": "^5.1.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/sqlite3": "^3.1.11",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "typescript": "^5.2.2",
    "tsx": "^4.7.0",
    "vite": "^5.0.8",
    "concurrently": "^8.2.2"
  }
}